<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/paper_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:background="?attr/paper_color">

        <include
            android:id="@+id/searchCard"
            layout="@layout/view_search_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="16dp"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/historyMoreButton"
            style="@style/P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/progressive_color"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="?android:attr/selectableItemBackground"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/recommendedContentTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginHorizontal="16dp"
            app:tabTextAppearance="@style/H3.Button"
            app:tabTextColor="?attr/placeholder_color"
            app:tabIndicatorFullWidth="true"
            app:tabSelectedTextColor="?attr/progressive_color"
            app:tabIndicatorColor="?attr/progressive_color"
            app:tabRippleColor="?attr/progressive_color" />

        <LinearLayout
            android:id="@+id/recommendedContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"/>

        <View
            android:id="@+id/sectionDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/list_divider"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/section1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top read + On this day + In the news (1 API call)"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp"/>

            <TextView
                android:id="@+id/section2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top read + Explore (2 API calls)"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />

            <TextView
                android:id="@+id/section3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top read + Explore + Places (3 API calls)"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />

            <TextView
                android:id="@+id/section4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top read + Explore + Places + Random (4 API calls)"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />

            <TextView
                android:id="@+id/section5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top read + Random (2 API calls)"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />

            <TextView
                android:id="@+id/section6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top read + Places (2 API calls)"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />

            <TextView
                android:id="@+id/section7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top read + Because you read + Continue reading (2 API calls + 1 local query)"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />

            <TextView
                android:id="@+id/section8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Places (1 API call)"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />

            <TextView
                android:id="@+id/section9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue reading (1 local query)"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />

            <TextView
                android:id="@+id/section10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random (1 API call)"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>

