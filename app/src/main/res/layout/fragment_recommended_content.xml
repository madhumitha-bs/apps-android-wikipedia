<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/paper_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:background="?attr/paper_color">

        <include
            android:id="@+id/searchCard"
            layout="@layout/view_search_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="3dp"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/historyMoreButton"
            style="@style/P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/progressive_color"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="?android:attr/selectableItemBackground"/>

        <org.wikipedia.recommendedcontent.RecommendedContentSectionView
            android:id="@+id/recommendedContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>

        <View
            android:id="@+id/sectionDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/list_divider"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/personalizedSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personalized section"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />

            <TextView
                android:id="@+id/generalizedSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generalized section"
                android:textColor="?attr/progressive_color"
                android:layout_marginVertical="6dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

